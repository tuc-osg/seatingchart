\NewDocumentCommand{\tucsInitSeating}{o}{
  \luadirect{require("tucseating.lua")}
  \luadirect{initRec(\tucs@rows,\tucs@seatsperrow)}
}
\NewDocumentCommand{\tucsConfig}{m}{
  \SetKeys[tucseating]{#1}%
  \tucs@configtikz%
}
\newcommand\tucs@configtikz{
  \tikzset{
    empty seat/.style={draw=\tucs@sc@emptyborder,
      fill=\tucs@sc@empty},
    empty label/.style={text=\tucs@sc@emptytext,
      font=\tucs@sc@emptytextfont
    },
    assigned seat/.style={draw=\tucs@sc@assignedborder,
      fill=\tucs@sc@assigned},
    empty label/.style={text=\tucs@sc@emptytext,
      font=\tucs@sc@emptytextfont
    },
    assigned label/.style={text=\tucs@sc@assignedtext,
      font=\tucs@sc@assignedtextfont
    }
  }
}
\NewDocumentCommand{\tucsDrawSeating}{O{}}{
  \begin{tikzpicture}[x=0.0098\linewidth,#1]
    \iftucs@blackboard
    \node[rectangle, draw,minimum width=0.4\textwidth] at (0,-2) {Tafel};
    \fi
    \luadirect{drawSeats()};
